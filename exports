export PATH=$HOME/bin:$PATH:$HOME/.npm/packages/bin
export LS='ls --color=auto'
export CD='cd'
export CAT='cat'
# red stderr >:)
export LD_PRELOAD="/usr/lib/libstderred.so${LD_PRELOAD:+:$LD_PRELOAD}"

red=$'\e[1;31m'
pink=$'\e[1;35m'
purple=$'\e[0;35m'
reset=$'\e[0m'

export PS1=$'\[${red}\]`ok`\[${pink}\][`time` \u\[`batcolor`\]@\[${pink}\]\h \w]`inception`\[${reset}\]$ '
